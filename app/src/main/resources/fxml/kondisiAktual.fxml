<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.Region?>

<?import javafx.scene.control.ProgressBar?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.meditrack.controller.KondisiAktualController"
            prefWidth="1200" prefHeight="700">

    <!-- =======================
         SIDEBAR
         ======================= -->
    <left>
        <VBox fx:id="sidebar"
              alignment="TOP_LEFT"
              spacing="15"
              prefWidth="250"
              style="-fx-background-color: #FFFFFF;">
            <padding><Insets top="30" left="40" right="24" bottom="30"/></padding>

            <!-- Logo Section -->
            <HBox alignment="CENTER_LEFT" spacing="12">
                <StackPane prefWidth="50" prefHeight="50"
                           style="-fx-background-color: #1E3A8A; -fx-background-radius: 12;">
                    <ImageView fitWidth="50" fitHeight="50" preserveRatio="true">
                        <image><Image url="@/images/logo.png"/></image>
                    </ImageView>
                </StackPane>
                <Label text="MediTrack"
                       style="-fx-font-family: 'Poppins'; -fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A;"/>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="12" VBox.vgrow="ALWAYS" style="-fx-padding: 40 0 0 0;">
                <!-- Menu Button -->
                <Button fx:id="menuButton" text="Menu"
                        alignment="CENTER_LEFT" graphicTextGap="16" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #9CA3AF; -fx-background-radius: 16;
                               -fx-font-family: 'Poppins'; -fx-font-size: 16px; -fx-font-weight: 600; -fx-padding: 16;">
                    <graphic>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@/images/piechart.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Rekomendasi Button -->
                <Button fx:id="rekomendasiButton" text="Rekomendasi"
                        alignment="CENTER_LEFT" graphicTextGap="16" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #9CA3AF; -fx-background-radius: 16;
                               -fx-font-family: 'Poppins'; -fx-font-size: 16px; -fx-font-weight: normal; -fx-padding: 16;">
                    <graphic>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@/images/graph.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Obat Button -->
                <Button fx:id="obatButton" text="Obat"
                        alignment="CENTER_LEFT" graphicTextGap="16" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #9CA3AF; -fx-background-radius: 16;
                               -fx-font-family: 'Poppins'; -fx-font-size: 16px; -fx-font-weight: normal; -fx-padding: 16;">
                    <graphic>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@/images/belanja.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Laporan Kesehatan Button (Active) -->
                <Button fx:id="laporanButton" text="Laporan Kesehatan"
                        alignment="CENTER_LEFT" graphicTextGap="16" maxWidth="Infinity"
                        style="-fx-background-color: #1D4ED8; -fx-text-fill: #DBEAFE; -fx-background-radius: 10;
                               -fx-font-family: 'Poppins'; -fx-font-size: 16px; -fx-font-weight: 600; -fx-padding: 16;">
                    <graphic>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@/images/data.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Konsultasi Button -->
                <Button fx:id="konsultasiButton" text="Konsultasi"
                        alignment="CENTER_LEFT" graphicTextGap="16" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #9CA3AF; -fx-background-radius: 16;
                               -fx-font-family: 'Poppins'; -fx-font-size: 16px; -fx-font-weight: normal; -fx-padding: 16;">
                    <graphic>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@/images/konsultasi.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Jadwal Button -->
                <Button fx:id="jadwalButton" text="Jadwal"
                        alignment="CENTER_LEFT" graphicTextGap="16" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #9CA3AF; -fx-background-radius: 16;
                               -fx-font-family: 'Poppins'; -fx-font-size: 16px; -fx-font-weight: normal; -fx-padding: 16;">
                    <graphic>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@/images/jadwal.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Pengaturan Button -->
                <Button fx:id="pengaturanButton" text="Pengaturan"
                        alignment="CENTER_LEFT" graphicTextGap="16" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #9CA3AF; -fx-background-radius: 16;
                               -fx-font-family: 'Poppins'; -fx-font-size: 16px; -fx-font-weight: normal; -fx-padding: 16;">
                    <graphic>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@/images/pengaturan.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <!-- Logout Button -->
            <Button fx:id="logoutButton" text="Keluar"
                    alignment="CENTER_LEFT" graphicTextGap="16" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: #9CA3AF;
                           -fx-font-family: 'Poppins'; -fx-font-size: 16px; -fx-font-weight: normal; -fx-padding: 16;">
                <graphic>
                    <ImageView fitWidth="20" fitHeight="20">
                        <image><Image url="@/images/keluar.png"/></image>
                    </ImageView>
                </graphic>
            </Button>
        </VBox>
    </left>

    <!-- =======================
         TOP BAR
         ======================= -->
    <top>
        <HBox spacing="15" prefHeight="80"
              style="-fx-background-color: #FFFFFF; -fx-padding: 20 30;"
              alignment="CENTER_LEFT">
            <Label text="Data Aktual"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1E40AF; -fx-font-family: 'Poppins';"/>
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Input Data Button -->
            <Button fx:id="btnInputData" text="Input Data Baru"
                    onAction="#handleInputData"
                    style="-fx-background-color: #1D4ED8; -fx-text-fill: white; -fx-background-radius: 12;
                           -fx-font-family: 'Poppins'; -fx-font-size: 14px; -fx-font-weight: 600; -fx-padding: 12 24;">
                <graphic>
                    <ImageView fitWidth="16" fitHeight="16">
                        <image><Image url="@/images/plus.png"/></image>
                    </ImageView>
                </graphic>
            </Button>

            <!-- Search Bar -->
            <StackPane style="-fx-background-color: #F9FAFB; -fx-background-radius: 32;"
                       prefWidth="300" prefHeight="36">
                <HBox alignment="CENTER_LEFT" spacing="8" style="-fx-padding: 0 24;">
                    <ImageView fitWidth="20" fitHeight="20">
                        <image><Image url="@/images/cari.png"/></image>
                    </ImageView>
                    <TextField promptText="Cari di sini"
                               style="-fx-background-color: transparent; -fx-font-size: 16px; -fx-text-fill: #9CA3AF;
                                      -fx-padding: 0; -fx-border-color: transparent; -fx-font-family: 'Poppins';"/>
                </HBox>
            </StackPane>

            <!-- Language Selector -->
            <HBox alignment="CENTER" spacing="14" style="-fx-padding: 10;">
                <ImageView fitWidth="24" fitHeight="24">
                    <image><Image url="@/images/indonesian.png"/></image>
                </ImageView>
                <Label text="Indo (IDN)"
                       style="-fx-font-family: 'Poppins'; -fx-font-size: 16px; -fx-font-weight: 600; -fx-text-fill: #374151;"/>
            </HBox>

            <!-- Notification -->
            <StackPane prefWidth="60" prefHeight="46"
                       style="-fx-background-color: #FEF2F2; -fx-background-radius: 10;">
                <ImageView fitWidth="24" fitHeight="24">
                    <image><Image url="@/images/notification.png"/></image>
                </ImageView>
                <Circle radius="6" fill="#EF4444"
                        StackPane.alignment="TOP_RIGHT">
                    <StackPane.margin>
                        <Insets top="4" right="4"/>
                    </StackPane.margin>
                </Circle>
            </StackPane>

            <!-- User Profile -->
            <HBox alignment="CENTER" spacing="16">
                <StackPane prefWidth="56" prefHeight="56">
                    <Circle radius="28" fill="#E5E7EB"/>
                    <ImageView fx:id="ivProfile" fitWidth="56" fitHeight="56" preserveRatio="true"/>
                    <Label fx:id="lblProfileInitial" text="" visible="false"
                           style="-fx-font-family: 'Poppins'; -fx-font-size: 20px; -fx-font-weight: 600; -fx-text-fill: #6B7280;"/>
                </StackPane>

                <VBox spacing="0">
                    <Label fx:id="lblUserName" text=""
                           style="-fx-font-family: 'Poppins'; -fx-font-size: 16px; -fx-font-weight: 500; -fx-text-fill: #1E3A8A;"/>
                </VBox>

                <Button fx:id="btnProfileDropdown"
                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-padding: 4;"
                        onAction="#handleProfileDropdown">
                    <graphic>
                        <ImageView fitWidth="21" fitHeight="16">
                            <image><Image url="@/images/dropdown-user.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #F8FAFC;">
            <VBox spacing="30" style="-fx-padding: 30;">

                <!-- Data Biometrik Section -->
                <VBox spacing="20">
                    <HBox alignment="CENTER_LEFT">
                        <Label text="Data Biometrik"
                               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="lblLastUpdate" text="Terakhir diperbarui: 2025-06-08 08:47"
                               style="-fx-font-size: 14px; -fx-text-fill: #9CA3AF; -fx-font-family: 'Poppins';"/>
                    </HBox>

                    <!-- Biometric Cards Grid (4 cards per row) -->
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <!-- Tekanan Darah Card -->
                        <VBox alignment="CENTER" spacing="15" prefWidth="240" prefHeight="220"
                              style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                            <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
                                <!-- Circular Display -->
                                <StackPane prefWidth="100" prefHeight="100">
                                    <!-- Track Circle -->
                                    <Circle radius="48" fill="transparent" stroke="#E5F3FF" strokeWidth="8"/>
                                    <!-- Ring Circle - Static Blue -->
                                    <Circle radius="44" fill="transparent" stroke="#3B82F6" strokeWidth="4"/>
                                    <!-- Content -->
                                    <VBox alignment="CENTER" spacing="2">
                                        <ImageView fitWidth="24" fitHeight="24">
                                            <image><Image url="@/images/blood-pressure.png"/></image>
                                        </ImageView>
                                        <Label fx:id="lblTekananDarahValue" text="120/80"
                                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>
                                        <Label text="mmHg"
                                               style="-fx-font-size: 10px; -fx-text-fill: #6B7280; -fx-font-family: 'Poppins';"/>
                                    </VBox>
                                </StackPane>

                                <!-- Progress Bar -->
                                <VBox alignment="CENTER" spacing="8" prefWidth="180">
                                    <ProgressBar fx:id="pbTekananDarah" prefWidth="180" prefHeight="8" progress="0.7"
                                                 style="-fx-accent: #3B82F6;"/>
                                    <VBox alignment="CENTER" spacing="2">
                                        <Label text="Tekanan Darah"
                                               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>
                                        <Label fx:id="lblTekananDarahStatus" text=""
                                               style="-fx-font-size: 12px; -fx-text-fill: #6B7280; -fx-font-family: 'Poppins';"/>
                                    </VBox>
                                </VBox>
                            </VBox>
                        </VBox>

                        <!-- Detak Jantung Card -->
                        <VBox alignment="CENTER" spacing="15" prefWidth="240" prefHeight="220"
                              style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                            <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
                                <!-- Circular Display -->
                                <StackPane prefWidth="100" prefHeight="100">
                                    <!-- Track Circle -->
                                    <Circle radius="48" fill="transparent" stroke="#E5F3FF" strokeWidth="8"/>
                                    <!-- Ring Circle - Static Blue -->
                                    <Circle radius="44" fill="transparent" stroke="#3B82F6" strokeWidth="4"/>
                                    <!-- Content -->
                                    <VBox alignment="CENTER" spacing="2">
                                        <ImageView fitWidth="24" fitHeight="24">
                                            <image><Image url="@/images/detakhati.png"/></image>
                                        </ImageView>
                                        <Label fx:id="lblDetakJantungValue" text="75"
                                               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>
                                        <Label text="BPM"
                                               style="-fx-font-size: 10px; -fx-text-fill: #6B7280; -fx-font-family: 'Poppins';"/>
                                    </VBox>
                                </StackPane>

                                <!-- Progress Bar -->
                                <VBox alignment="CENTER" spacing="8" prefWidth="180">
                                    <ProgressBar fx:id="pbDetakJantung" prefWidth="180" prefHeight="8" progress="0.6"
                                                 style="-fx-accent: #3B82F6;"/>
                                    <VBox alignment="CENTER" spacing="2">
                                        <Label text="Detak Jantung"
                                               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>
                                        <Label fx:id="lblDetakJantungStatus" text=""
                                               style="-fx-font-size: 12px; -fx-text-fill: #6B7280; -fx-font-family: 'Poppins';"/>
                                    </VBox>
                                </VBox>
                            </VBox>
                        </VBox>

                        <!-- Suhu Tubuh Card -->
                        <VBox alignment="CENTER" spacing="15" prefWidth="240" prefHeight="220"
                              style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                            <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
                                <!-- Circular Display -->
                                <StackPane prefWidth="100" prefHeight="100">
                                    <!-- Track Circle -->
                                    <Circle radius="48" fill="transparent" stroke="#E5F3FF" strokeWidth="8"/>
                                    <!-- Ring Circle - Static Blue -->
                                    <Circle radius="44" fill="transparent" stroke="#3B82F6" strokeWidth="4"/>
                                    <!-- Content -->
                                    <VBox alignment="CENTER" spacing="2">
                                        <ImageView fitWidth="24" fitHeight="24">
                                            <image><Image url="@/images/thermometer.png"/></image>
                                        </ImageView>
                                        <Label fx:id="lblSuhuTubuhValue" text="37.0"
                                               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>
                                        <Label text="°C"
                                               style="-fx-font-size: 10px; -fx-text-fill: #6B7280; -fx-font-family: 'Poppins';"/>
                                    </VBox>
                                </StackPane>

                                <!-- Progress Bar -->
                                <VBox alignment="CENTER" spacing="8" prefWidth="180">
                                    <ProgressBar fx:id="pbSuhuTubuh" prefWidth="180" prefHeight="8" progress="0.8"
                                                 style="-fx-accent: #3B82F6;"/>
                                    <VBox alignment="CENTER" spacing="2">
                                        <Label text="Suhu Tubuh"
                                               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>
                                        <Label fx:id="lblSuhuTubuhStatus" text=""
                                               style="-fx-font-size: 12px; -fx-text-fill: #6B7280; -fx-font-family: 'Poppins';"/>
                                    </VBox>
                                </VBox>
                            </VBox>
                        </VBox>

                        <!-- Tingkat Stres Card -->
                        <VBox alignment="CENTER" spacing="15" prefWidth="240" prefHeight="220"
                              style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                            <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
                                <!-- Circular Display -->
                                <StackPane prefWidth="100" prefHeight="100">
                                    <!-- Track Circle -->
                                    <Circle radius="48" fill="transparent" stroke="#E5F3FF" strokeWidth="8"/>
                                    <!-- Ring Circle - Static Blue -->
                                    <Circle radius="44" fill="transparent" stroke="#3B82F6" strokeWidth="4"/>
                                    <!-- Content -->
                                    <VBox alignment="CENTER" spacing="2">
                                        <ImageView fitWidth="24" fitHeight="24">
                                            <image><Image url="@/images/otak.png"/></image>
                                        </ImageView>
                                        <Label fx:id="lblStresValue" text="Sedang"
                                               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>
                                        <Label text="Level"
                                               style="-fx-font-size: 10px; -fx-text-fill: #6B7280; -fx-font-family: 'Poppins';"/>
                                    </VBox>
                                </StackPane>

                                <!-- Progress Bar -->
                                <VBox alignment="CENTER" spacing="8" prefWidth="180">
                                    <ProgressBar fx:id="pbStres" prefWidth="180" prefHeight="8" progress="0.6"
                                                 style="-fx-accent: #3B82F6;"/>
                                    <VBox alignment="CENTER" spacing="2">
                                        <Label text="Tingkat Stres"
                                               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>
                                        <Label fx:id="lblStresStatus" text=""
                                               style="-fx-font-size: 12px; -fx-text-fill: #6B7280; -fx-font-family: 'Poppins';"/>
                                    </VBox>
                                </VBox>
                            </VBox>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Data Kesehatan Fisik Section -->
                <VBox spacing="20">
                    <HBox alignment="CENTER_LEFT">
                        <Label text="Data Kesehatan Fisik"
                               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>
                    </HBox>

                    <!-- Physical Health Cards Grid -->
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <!-- Durasi Tidur Card -->
                        <VBox alignment="CENTER" spacing="15" prefWidth="240" prefHeight="220"
                              style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                            <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
                                <!-- Circular Display -->
                                <StackPane prefWidth="100" prefHeight="100">
                                    <!-- Track Circle -->
                                    <Circle radius="48" fill="transparent" stroke="#FEF3C7" strokeWidth="8"/>
                                    <!-- Ring Circle - Static Orange -->
                                    <Circle radius="44" fill="transparent" stroke="#F59E0B" strokeWidth="4"/>
                                    <!-- Content -->
                                    <VBox alignment="CENTER" spacing="2">
                                        <ImageView fitWidth="24" fitHeight="24">
                                            <image><Image url="@/images/jam.png"/></image>
                                        </ImageView>
                                        <Label fx:id="lblDurasiTidurValue" text="8.0"
                                               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #D97706; -fx-font-family: 'Poppins';"/>
                                        <Label text="Jam"
                                               style="-fx-font-size: 10px; -fx-text-fill: #6B7280; -fx-font-family: 'Poppins';"/>
                                    </VBox>
                                </StackPane>

                                <!-- Progress Bar -->
                                <VBox alignment="CENTER" spacing="8" prefWidth="180">
                                    <ProgressBar fx:id="pbDurasiTidur" prefWidth="180" prefHeight="8" progress="1.0"
                                                 style="-fx-accent: #F59E0B;"/>
                                    <VBox alignment="CENTER" spacing="2">
                                        <Label text="Durasi Tidur"
                                               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>
                                        <Label fx:id="lblTidurStatus" text=""
                                               style="-fx-font-size: 12px; -fx-text-fill: #6B7280; -fx-font-family: 'Poppins';"/>
                                    </VBox>
                                </VBox>
                            </VBox>
                        </VBox>

                        <!-- Durasi Olahraga Card -->
                        <VBox alignment="CENTER" spacing="15" prefWidth="240" prefHeight="220"
                              style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                            <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
                                <!-- Circular Display -->
                                <StackPane prefWidth="100" prefHeight="100">
                                    <!-- Track Circle -->
                                    <Circle radius="48" fill="transparent" stroke="#FEF3C7" strokeWidth="8"/>
                                    <!-- Ring Circle - Static Orange -->
                                    <Circle radius="44" fill="transparent" stroke="#F59E0B" strokeWidth="4"/>
                                    <!-- Content -->
                                    <VBox alignment="CENTER" spacing="2">
                                        <ImageView fitWidth="24" fitHeight="24">
                                            <image><Image url="@/images/olahraga.png"/></image>
                                        </ImageView>
                                        <Label fx:id="lblDurasiOlahragaValue" text="45"
                                               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #D97706; -fx-font-family: 'Poppins';"/>
                                        <Label text="Menit"
                                               style="-fx-font-size: 10px; -fx-text-fill: #6B7280; -fx-font-family: 'Poppins';"/>
                                    </VBox>
                                </StackPane>

                                <!-- Progress Bar -->
                                <VBox alignment="CENTER" spacing="8" prefWidth="180">
                                    <ProgressBar fx:id="pbOlahraga" prefWidth="180" prefHeight="8" progress="0.75"
                                                 style="-fx-accent: #F59E0B;"/>
                                    <VBox alignment="CENTER" spacing="2">
                                        <Label text="Durasi Olahraga"
                                               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>
                                        <Label fx:id="lblOlahragaStatus" text=""
                                               style="-fx-font-size: 12px; -fx-text-fill: #6B7280; -fx-font-family: 'Poppins';"/>
                                    </VBox>
                                </VBox>
                            </VBox>
                        </VBox>

                        <!-- Jumlah Langkah Card -->
                        <VBox alignment="CENTER" spacing="15" prefWidth="240" prefHeight="220"
                              style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                            <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
                                <!-- Circular Display -->
                                <StackPane prefWidth="100" prefHeight="100">
                                    <!-- Track Circle -->
                                    <Circle radius="48" fill="transparent" stroke="#FEF3C7" strokeWidth="8"/>
                                    <!-- Ring Circle - Static Orange -->
                                    <Circle radius="44" fill="transparent" stroke="#F59E0B" strokeWidth="4"/>
                                    <!-- Content -->
                                    <VBox alignment="CENTER" spacing="2">
                                        <ImageView fitWidth="24" fitHeight="24">
                                            <image><Image url="@/images/jejak.png"/></image>
                                        </ImageView>
                                        <Label fx:id="lblJumlahLangkahValue" text="2000"
                                               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #D97706; -fx-font-family: 'Poppins';"/>
                                        <Label text="Langkah"
                                               style="-fx-font-size: 10px; -fx-text-fill: #6B7280; -fx-font-family: 'Poppins';"/>
                                    </VBox>
                                </StackPane>

                                <!-- Progress Bar -->
                                <VBox alignment="CENTER" spacing="8" prefWidth="180">
                                    <ProgressBar fx:id="pbLangkah" prefWidth="180" prefHeight="8" progress="0.25"
                                                 style="-fx-accent: #F59E0B;"/>
                                    <VBox alignment="CENTER" spacing="2">
                                        <Label text="Jumlah Langkah"
                                               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>
                                        <Label fx:id="lblLangkahStatus" text=""
                                               style="-fx-font-size: 12px; -fx-text-fill: #6B7280; -fx-font-family: 'Poppins';"/>
                                    </VBox>
                                </VBox>
                            </VBox>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Input Data Form Section -->
                <VBox fx:id="inputFormSection" spacing="20" visible="false" managed="false">
                    <HBox alignment="CENTER_LEFT">
                        <Label text="Input Data Kesehatan Baru"
                               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btnCancelInput" text="Batal" onAction="#handleCancelInput"
                                style="-fx-background-color: #EF4444; -fx-text-fill: white; -fx-background-radius: 12;
           -fx-font-family: 'Poppins'; -fx-font-size: 14px; -fx-font-weight: 600; -fx-padding: 12 24;"/>
                    </HBox>

                    <!-- Input Form Grid -->
                    <VBox spacing="25" style="-fx-background-color: #FFFFFF; -fx-background-radius: 16; -fx-padding: 30;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">

                        <!-- Data Biometrik Input -->
                        <VBox spacing="20">
                            <Label text="Data Biometrik"
                                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>

                            <GridPane hgap="25" vgap="20">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="25"/>
                                    <ColumnConstraints percentWidth="25"/>
                                    <ColumnConstraints percentWidth="25"/>
                                    <ColumnConstraints percentWidth="25"/>
                                </columnConstraints>

                                <!-- Tekanan Darah -->
                                <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <Label text="Tekanan Darah (mmHg)"
                                           style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #374151; -fx-font-family: 'Poppins';"/>
                                    <TextField fx:id="txtTekananDarah" promptText="120/80"
                                               style="-fx-background-color: #F9FAFB; -fx-border-color: #D1D5DB; -fx-border-radius: 8;
                          -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-font-family: 'Poppins';"/>
                                </VBox>

                                <!-- Detak Jantung -->
                                <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <Label text="Detak Jantung (BPM)"
                                           style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #374151; -fx-font-family: 'Poppins';"/>
                                    <TextField fx:id="txtDetakJantung" promptText="75"
                                               style="-fx-background-color: #F9FAFB; -fx-border-color: #D1D5DB; -fx-border-radius: 8;
                          -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-font-family: 'Poppins';"/>
                                </VBox>

                                <!-- Suhu Tubuh -->
                                <VBox spacing="8" GridPane.columnIndex="2" GridPane.rowIndex="0">
                                    <Label text="Suhu Tubuh (°C)"
                                           style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #374151; -fx-font-family: 'Poppins';"/>
                                    <TextField fx:id="txtSuhuTubuh" promptText="36.5"
                                               style="-fx-background-color: #F9FAFB; -fx-border-color: #D1D5DB; -fx-border-radius: 8;
                          -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-font-family: 'Poppins';"/>
                                </VBox>

                                <!-- Tingkat Stres -->
                                <VBox spacing="8" GridPane.columnIndex="3" GridPane.rowIndex="0">
                                    <Label text="Tingkat Stres"
                                           style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #374151; -fx-font-family: 'Poppins';"/>
                                    <ComboBox fx:id="cbTingkatStres" promptText="Pilih tingkat stres" prefWidth="200"
                                              style="-fx-background-color: #F9FAFB; -fx-border-color: #D1D5DB; -fx-border-radius: 8;
                         -fx-background-radius: 8; -fx-font-size: 14px; -fx-font-family: 'Poppins';">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="Rendah"/>
                                                <String fx:value="Sedang"/>
                                                <String fx:value="Tinggi"/>
                                            </FXCollections>
                                        </items>
                                    </ComboBox>
                                </VBox>
                            </GridPane>
                        </VBox>

                        <!-- Data Aktivitas & Kesehatan Input -->
                        <VBox spacing="20">
                            <Label text="Data Aktivitas dan Kesehatan"
                                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>

                            <GridPane hgap="25" vgap="20">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="33.33"/>
                                    <ColumnConstraints percentWidth="33.33"/>
                                    <ColumnConstraints percentWidth="33.33"/>
                                </columnConstraints>

                                <!-- Durasi Tidur -->
                                <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <Label text="Durasi Tidur (jam)"
                                           style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #374151; -fx-font-family: 'Poppins';"/>
                                    <TextField fx:id="txtDurasiTidur" promptText="8.0"
                                               style="-fx-background-color: #F9FAFB; -fx-border-color: #D1D5DB; -fx-border-radius: 8;
                          -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-font-family: 'Poppins';"/>
                                </VBox>

                                <!-- Durasi Olahraga -->
                                <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <Label text="Durasi Olahraga (menit)"
                                           style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #374151; -fx-font-family: 'Poppins';"/>
                                    <TextField fx:id="txtDurasiOlahraga" promptText="45"
                                               style="-fx-background-color: #F9FAFB; -fx-border-color: #D1D5DB; -fx-border-radius: 8;
                          -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-font-family: 'Poppins';"/>
                                </VBox>

                                <!-- Jumlah Langkah -->
                                <VBox spacing="8" GridPane.columnIndex="2" GridPane.rowIndex="0">
                                    <Label text="Jumlah Langkah"
                                           style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #374151; -fx-font-family: 'Poppins';"/>
                                    <TextField fx:id="txtJumlahLangkah" promptText="8500"
                                               style="-fx-background-color: #F9FAFB; -fx-border-color: #D1D5DB; -fx-border-radius: 8;
                          -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-font-family: 'Poppins';"/>
                                </VBox>
                            </GridPane>
                        </VBox>

                        <!-- Submit Button -->
                        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20 0 0 0;">
                            <Button fx:id="btnSimpanData" text="Simpan Data" onAction="#handleSimpanData"
                                    style="-fx-background-color: #1D4ED8; -fx-text-fill: white; -fx-background-radius: 12;
               -fx-font-family: 'Poppins'; -fx-font-size: 16px; -fx-font-weight: 600; -fx-padding: 16 32;"
                                    prefWidth="200">
                                <graphic>
                                    <ImageView fitWidth="20" fitHeight="20">
                                        <image><Image url="@/images/save.png"/></image>
                                    </ImageView>
                                </graphic>
                            </Button>
                        </HBox>
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>