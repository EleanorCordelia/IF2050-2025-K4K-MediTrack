<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.meditrack.LandingController"
            style="-fx-font-family: 'Poppins'; -fx-background-color: white;">

    <!-- Header -->

    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: white;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <ImageView fitHeight="40" fitWidth="40">
                <image>
                    <Image url="@/images/logo.png"/>
                </image>
            </ImageView>
            <Label text="MediTrack" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #112f82;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Beranda" style="-fx-font-size: 16px; -fx-font-weight: 600;"/>
            <Button text="Registrasi"
                    style="-fx-border-color: black; -fx-background-color: transparent; -fx-border-radius: 32; -fx-text-fill: black; -fx-font-size: 14px;"/>
            <Button text="Masuk"
                    style="-fx-background-color: #112f82; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 32;"/>
        </HBox>
    </top>

    <!-- Center Section -->
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>
            <HBox spacing="30">
                <VBox spacing="15" prefWidth="600">
                    <Label text="Bersama" style="-fx-font-size: 36px; -fx-font-weight: bold;"/>
                    <Label text="MediTrack" style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-text-fill: #10217d;"/>
                    <Label text="Jaga Kesehatan dengan Lebih Mudah!"
                           style="-fx-font-size: 20px; -fx-font-style: italic;"/>
                    <Label wrapText="true"
                           text="MediTrack adalah platform kesehatan digital yang dirancang untuk membantu Anda mengelola aktivitas kesehatan sehari-hari secara praktis dan terintegrasi. Dengan fitur canggih seperti pencatatan konsumsi obat, pemantauan kondisi kesehatan melalui wearable device, serta konsultasi online dengan dokter, MediTrack memudahkan Anda dalam menjaga pola hidup sehat secara holistik. Mulai dari mengatur jadwal harian hingga mendapatkan rekomendasi personal, semua dapat dilakukan dalam satu aplikasi yang intuitif dan mudah digunakan."
                           style="-fx-font-size: 14px;"/>
                    <Label text="Bergabunglah dengan komunitas MediTrack dan mulai perjalanan hidup sehat Anda hari ini!"
                           style="-fx-text-fill: #10217d; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <HBox spacing="15">
                        <Button fx:id="gabungButton"
                                text="Gabung untuk Perubahan"
                                onAction="#handleGabungAction"
                                style="-fx-background-color: #112f82; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 10;"/>
                        <Button text="Pelajari Lebih Lanjut"
                                style="-fx-background-color: #eef6ff; -fx-text-fill: #112f82; -fx-border-color: #112f82; -fx-border-width: 1; -fx-border-radius: 10;"/>
                    </HBox>
                </VBox>
            </HBox>
                <ImageView fitWidth="500" preserveRatio="true">
                    <image>
                        <Image url="@/images/doctor.png"/>
                    </image>
                </ImageView>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox spacing="20" alignment="CENTER" style="-fx-background-color: #f5f7fb;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <VBox alignment="CENTER">
                <ImageView fitWidth="32" preserveRatio="true">
                    <image><Image url="@/images/icon-rekomendasi.png"/></image>
                </ImageView>
                <Label text="Rekomendasi" style="-fx-font-weight: bold;"/>
                <Label text="Saran obat &amp; suplemen"/>
            </VBox>
            <VBox alignment="CENTER">
                <ImageView fitWidth="32" preserveRatio="true">
                    <image><Image url="@/images/icon-obat.png"/></image>
                </ImageView>
                <Label text="Obat" style="-fx-font-weight: bold;"/>
                <Label text="Atur jadwal konsumsi"/>
            </VBox>
            <VBox alignment="CENTER">
                <ImageView fitWidth="32" preserveRatio="true">
                    <image><Image url="@/images/icon-laporan.png"/></image>
                </ImageView>
                <Label text="Laporan Kesehatan" style="-fx-font-weight: bold;"/>
                <Label text="Pantau grafik &amp; data"/>
            </VBox>
            <VBox alignment="CENTER">
                <ImageView fitWidth="32" preserveRatio="true">
                    <image><Image url="@/images/icon-konsultasi.png"/></image>
                </ImageView>
                <Label text="Konsultasi" style="-fx-font-weight: bold;"/>
                <Label text="Hubungi dokter online"/>
            </VBox>
            <VBox alignment="CENTER">
                <ImageView fitWidth="32" preserveRatio="true">
                    <image><Image url="@/images/icon-jadwal.png"/></image>
                </ImageView>
                <Label text="Jadwal" style="-fx-font-weight: bold;"/>
                <Label text="Atur &amp; lihat aktivitas"/>
            </VBox>
            <VBox alignment="CENTER">
                <ImageView fitWidth="32" preserveRatio="true">
                    <image><Image url="@/images/icon-pengaturan.png"/></image>
                </ImageView>
                <Label text="Pengaturan" style="-fx-font-weight: bold;"/>
                <Label text="Atur preferensi profil"/>
            </VBox>
        </HBox>
    </bottom>

</BorderPane>
