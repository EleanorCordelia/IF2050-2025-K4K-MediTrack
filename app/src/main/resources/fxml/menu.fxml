<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>

<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.meditrack.controller.MenuController"
            prefWidth="1400" prefHeight="900"
            style="-fx-background-color: #F9FAFB;">

    <!-- ===============================================
         SIDEBAR NAVIGATION
         =============================================== -->
    <left>
        <VBox fx:id="sidebar"
              alignment="TOP_LEFT"
              spacing="8"
              prefWidth="280"
              style="-fx-background-color: #FFFFFF; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 2, 0);">
            <padding><Insets top="32" left="32" right="24" bottom="24"/></padding>

            <!-- Logo Section -->
            <HBox alignment="CENTER_LEFT" spacing="12">
                <StackPane prefWidth="50" prefHeight="50"
                           style="-fx-background-color: #1E3A8A; -fx-background-radius: 10;">
                    <ImageView fitWidth="50" fitHeight="50" preserveRatio="true">
                        <image><Image url="@/images/logo.png"/></image>
                    </ImageView>
                </StackPane>
                <Label text="MediTrack"
                       style="-fx-font-family: 'Poppins'; -fx-font-size: 20px; -fx-font-weight: 600; -fx-text-fill: #1E3A8A;"/>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="4" VBox.vgrow="ALWAYS" style="-fx-padding: 32 0 0 0;">

                <!-- Active Menu Button -->
                <Button fx:id="menuButton" text="Menu"
                        alignment="CENTER_LEFT" graphicTextGap="12" maxWidth="Infinity"
                        style="-fx-background-color: #1E40AF; -fx-text-fill: #FFFFFF; -fx-background-radius: 8;
                               -fx-font-family: 'Poppins'; -fx-font-size: 14px; -fx-font-weight: 600;
                               -fx-padding: 12 20; -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image><Image url="@/images/piechart.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Navigation Buttons -->
                <Button fx:id="rekomendasiButton" text="Rekomendasi" onAction="#handleSidebarButton"
                        alignment="CENTER_LEFT" graphicTextGap="12" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #9CA3AF; -fx-background-radius: 8;
                               -fx-font-family: 'Poppins'; -fx-font-size: 14px; -fx-font-weight: 400;
                               -fx-padding: 12 20; -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18">
                            <image><Image url="@/images/graph.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="obatButton" text="Obat" onAction="#handleSidebarButton"
                        alignment="CENTER_LEFT" graphicTextGap="12" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #9CA3AF; -fx-background-radius: 8;
                               -fx-font-family: 'Poppins'; -fx-font-size: 14px; -fx-font-weight: 400;
                               -fx-padding: 12 20; -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18">
                            <image><Image url="@/images/belanja.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="laporanButton" text="Laporan Kesehatan" onAction="#handleSidebarButton"
                        alignment="CENTER_LEFT" graphicTextGap="12" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #9CA3AF; -fx-background-radius: 8;
                               -fx-font-family: 'Poppins'; -fx-font-size: 14px; -fx-font-weight: 400;
                               -fx-padding: 12 20; -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18">
                            <image><Image url="@/images/data.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="konsultasiButton" text="Konsultasi" onAction="#handleSidebarButton"
                        alignment="CENTER_LEFT" graphicTextGap="12" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #9CA3AF; -fx-background-radius: 8;
                               -fx-font-family: 'Poppins'; -fx-font-size: 14px; -fx-font-weight: 400;
                               -fx-padding: 12 20; -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18">
                            <image><Image url="@/images/konsultasi.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="jadwalButton" text="Jadwal" onAction="#handleSidebarButton"
                        alignment="CENTER_LEFT" graphicTextGap="12" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #9CA3AF; -fx-background-radius: 8;
                               -fx-font-family: 'Poppins'; -fx-font-size: 14px; -fx-font-weight: 400;
                               -fx-padding: 12 20; -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18">
                            <image><Image url="@/images/jadwal.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="pengaturanButton" text="Pengaturan" onAction="#handleSidebarButton"
                        alignment="CENTER_LEFT" graphicTextGap="12" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #9CA3AF; -fx-background-radius: 8;
                        -fx-font-family: 'Poppins'; -fx-font-size: 14px; -fx-font-weight: 400;
                        -fx-padding: 12 20; -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18">
                            <image><Image url="@/images/pengaturan.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Spacer -->
                <Region VBox.vgrow="ALWAYS"/>

                <!-- Keluar Button -->
                <Button fx:id="keluarButton" text="Keluar" onAction="#handleSidebarButton"
                        alignment="CENTER_LEFT" graphicTextGap="12" maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #EF4444;
                               -fx-font-family: 'Poppins'; -fx-font-size: 14px; -fx-font-weight: 500;
                               -fx-padding: 12 20; -fx-cursor: hand; -fx-background-radius: 8;">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18">
                            <image><Image url="@/images/keluar.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- ===============================================
         TOP HEADER BAR
         =============================================== -->
    <top>
        <HBox spacing="16" prefHeight="70"
              style="-fx-background-color: #FFFFFF; -fx-padding: 16 32; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);"
              alignment="CENTER_LEFT">

            <!-- Page Title -->
            <Label text="Menu"
                   style="-fx-font-size: 24px; -fx-font-weight: 600; -fx-text-fill: #1E3A8A; -fx-font-family: 'Poppins';"/>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Search Bar -->
            <StackPane style="-fx-background-color: #F9FAFB; -fx-background-radius: 20;"
                       prefWidth="320" prefHeight="40">
                <HBox alignment="CENTER_LEFT" spacing="8" style="-fx-padding: 0 16;">
                    <ImageView fitWidth="16" fitHeight="16">
                        <image><Image url="@/images/cari.png"/></image>
                    </ImageView>
                    <TextField fx:id="searchField" promptText="Cari di sini..."
                               style="-fx-background-color: transparent; -fx-font-size: 13px; -fx-text-fill: #64748B;
                                      -fx-padding: 0; -fx-border-color: transparent; -fx-font-family: 'Poppins';"
                               HBox.hgrow="ALWAYS"/>
                </HBox>
            </StackPane>

            <!-- Language Selector -->
            <HBox alignment="CENTER" spacing="6" style="-fx-padding: 6;">
                <ImageView fitWidth="16" fitHeight="16">
                    <image><Image url="@/images/indonesian.png"/></image>
                </ImageView>
                <Label text="Indo (IDN)"
                       style="-fx-font-family: 'Poppins'; -fx-font-size: 13px; -fx-font-weight: 500; -fx-text-fill: #374151;"/>
                <ImageView fitWidth="12" fitHeight="12">
                    <image><Image url="@/images/dropdown-user.png"/></image>
                </ImageView>
            </HBox>

            <!-- Notification -->
            <StackPane prefWidth="36" prefHeight="36"
                       style="-fx-background-color: #FFF7ED; -fx-background-radius: 8; -fx-cursor: hand;">
                <ImageView fitWidth="18" fitHeight="18">
                    <image><Image url="@/images/notification.png"/></image>
                </ImageView>
                <Circle radius="3" fill="#EF4444"
                        StackPane.alignment="TOP_RIGHT">
                    <StackPane.margin>
                        <Insets top="4" right="4"/>
                    </StackPane.margin>
                </Circle>
            </StackPane>

            <!-- User Profile -->
            <HBox alignment="CENTER" spacing="8">
                <StackPane prefWidth="36" prefHeight="36">
                    <Circle radius="18" fill="#E5E7EB"/>
                    <ImageView fx:id="ivProfile" fitWidth="36" fitHeight="36" preserveRatio="true">
                        <image><Image url="@/images/user.png"/></image>
                    </ImageView>
                </StackPane>
                <Label fx:id="lblUserName" text="Carlos"
                       style="-fx-font-family: 'Poppins'; -fx-font-size: 13px; -fx-font-weight: 500; -fx-text-fill: #1E3A8A;"/>
                <Button fx:id="btnProfileDropdown"
                        style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-padding: 2; -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitWidth="10" fitHeight="10">
                            <image><Image url="@/images/dropdown-user.png"/></image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </HBox>
    </top>

    <!-- ===============================================
         MAIN CONTENT AREA
         =============================================== -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #F9FAFB;" hbarPolicy="NEVER">
            <VBox spacing="24" style="-fx-padding: 16 32 48 32;">

                <!-- ===== HERO BANNER SECTION ===== -->
                <StackPane prefHeight="240" style="-fx-background-color: linear-gradient(135deg, #DBEAFE 0%, #BFDBFE 100%); -fx-background-radius: 12;">
                    <ImageView fitWidth="1200" fitHeight="240" preserveRatio="false" opacity="0.3">
                        <image><Image url="@/images/hero-banner.png"/></image>
                    </ImageView>

                    <VBox alignment="CENTER" spacing="12">
                        <!-- Welcome Text -->
                        <ImageView fitWidth="30" fitHeight="30">
                            <image><Image url="@/images/dummy.png"/></image>
                        </ImageView>
                        <HBox alignment="CENTER" spacing="6">
                            <Label text="Selamat Datang, "
                                   style="-fx-font-family: 'Poppins'; -fx-font-size: 32px; -fx-font-weight: 400; -fx-text-fill: #1E3A8A;"/>
                            <Label fx:id="heroUserName" text="User"
                                   style="-fx-font-family: 'Poppins'; -fx-font-size: 32px; -fx-font-weight: bolder; -fx-text-fill: #1E3A8A;"/>
                            <Label text="!"
                                   style="-fx-font-family: 'Poppins'; -fx-font-size: 32px; -fx-font-weight: 400; -fx-text-fill: #1E3A8A;"/>
                        </HBox>

                        <!-- Subtitle -->
                        <VBox alignment="CENTER" spacing="6">
                            <HBox alignment="CENTER" spacing="6">
                                <Label text="Hidup Sehat dengan "
                                       style="-fx-font-family: 'Poppins'; -fx-font-size: 18px; -fx-font-weight: 400; -fx-text-fill: #1E3A8A;"/>
                                <Label text="MediTrack"
                                       style="-fx-font-family: 'Poppins'; -fx-font-size: 18px; -fx-font-weight: bolder; -fx-text-fill: #1E3A8A;"/>
                            </HBox>

                            <Label text="Mulai perjalanan kesehatanmu bersama MediTrack dengan fitur lengkap yang membantu memantau, mengelola, dan meningkatkan kualitas hidup setiap hari."
                                   wrapText="true" textAlignment="CENTER" maxWidth="700"
                                   style="-fx-font-family: 'Poppins'; -fx-font-size: 14px; -fx-font-weight: 400; -fx-text-fill: #1E3A8A; -fx-line-spacing: 2;"/>
                        </VBox>
                    </VBox>
                </StackPane>

                <!-- ===== DASHBOARD CARDS SECTION ===== -->
                <HBox spacing="24" alignment="TOP_LEFT">

                    <!-- Data Biometrik Card -->
                    <VBox spacing="20"
                          style="-fx-background-color: #FFFFFF; -fx-background-radius: 12;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 2); -fx-padding: 24;"
                          HBox.hgrow="ALWAYS">

                        <!-- Card Header -->
                        <HBox alignment="CENTER_LEFT">
                            <VBox spacing="2">
                                <Label text="Data Biometrik"
                                       style="-fx-font-family: 'Poppins'; -fx-font-size: 20px; -fx-font-weight: bolder; -fx-text-fill: #1E3A8A;"/>
                                <Label text="Kondisi Tubuh Saat Ini"
                                       style="-fx-font-family: 'Poppins'; -fx-font-size: 12px; -fx-text-fill: #64748B;"/>
                            </VBox>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="Lihat Selengkapnya"
                                    style="-fx-background-color: transparent; -fx-border-color: #CBD5E1; -fx-border-radius: 6;
                                           -fx-text-fill: #0F172A; -fx-font-family: 'Poppins'; -fx-font-size: 11px;
                                           -fx-font-weight: 500; -fx-padding: 8 12; -fx-cursor: hand;">
                                <graphic>
                                    <ImageView fitWidth="10" fitHeight="10">
                                        <image><Image url="@/images/arrow-right.png"/></image>
                                    </ImageView>
                                </graphic>
                            </Button>
                        </HBox>

                        <!-- Biometric Data Grid -->
                        <HBox spacing="12" alignment="CENTER">

                            <!-- Blood Pressure Card -->
                            <VBox spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS"
                                  style="-fx-background-color: #FEF2F2; -fx-background-radius: 10; -fx-padding: 16;">
                                <StackPane prefWidth="28" prefHeight="28" style="-fx-background-color: #FB7185; -fx-background-radius: 14;">
                                    <ImageView fitWidth="14" fitHeight="14">
                                        <image><Image url="@/images/blood-pressure.png"/></image>
                                    </ImageView>
                                </StackPane>
                                <Label fx:id="bloodPressureValue" text="120/80" style="-fx-font-family: 'Poppins'; -fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #1E3A8A;"/>
                                <VBox alignment="CENTER" spacing="1">
                                    <Label text="mmHg" style="-fx-font-family: 'Poppins'; -fx-font-size: 9px; -fx-font-weight: 500; -fx-text-fill: #64748B;"/>
                                    <Label text="Tekanan Darah" style="-fx-font-family: 'Poppins'; -fx-font-size: 10px; -fx-font-weight: 500; -fx-text-fill: #000000;" textAlignment="CENTER"/>
                                </VBox>
                            </VBox>

                            <!-- Heart Rate Card -->
                            <VBox spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS"
                                  style="-fx-background-color: #FFF7ED; -fx-background-radius: 10; -fx-padding: 16;">
                                <StackPane prefWidth="28" prefHeight="28" style="-fx-background-color: #FB923C; -fx-background-radius: 14;">
                                    <ImageView fitWidth="14" fitHeight="14">
                                        <image><Image url="@/images/detakhati.png"/></image>
                                    </ImageView>
                                </StackPane>
                                <Label fx:id="heartRateValue" text="110" style="-fx-font-family: 'Poppins'; -fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #1E3A8A;"/>
                                <VBox alignment="CENTER" spacing="1">
                                    <Label text="BPM" style="-fx-font-family: 'Poppins'; -fx-font-size: 9px; -fx-font-weight: 500; -fx-text-fill: #64748B;"/>
                                    <Label text="Detak Jantung" style="-fx-font-family: 'Poppins'; -fx-font-size: 10px; -fx-font-weight: 500; -fx-text-fill: #000000;" textAlignment="CENTER"/>
                                </VBox>
                            </VBox>

                            <!-- Body Temperature Card -->
                            <VBox spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS"
                                  style="-fx-background-color: #F0FDF4; -fx-background-radius: 10; -fx-padding: 16;">
                                <StackPane prefWidth="28" prefHeight="28" style="-fx-background-color: #22C55E; -fx-background-radius: 14;">
                                    <ImageView fitWidth="14" fitHeight="14">
                                        <image><Image url="@/images/thermometer.png"/></image>
                                    </ImageView>
                                </StackPane>
                                <Label fx:id="bodyTempValue" text="36.5" style="-fx-font-family: 'Poppins'; -fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #1E3A8A;"/>
                                <VBox alignment="CENTER" spacing="1">
                                    <Label text="°C" style="-fx-font-family: 'Poppins'; -fx-font-size: 9px; -fx-font-weight: 500; -fx-text-fill: #64748B;"/>
                                    <Label text="Suhu Tubuh" style="-fx-font-family: 'Poppins'; -fx-font-size: 10px; -fx-font-weight: 500; -fx-text-fill: #000000;" textAlignment="CENTER"/>
                                </VBox>
                            </VBox>

                            <!-- Stress Level Card -->
                            <VBox spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS"
                                  style="-fx-background-color: #FAF5FF; -fx-background-radius: 10; -fx-padding: 16;">
                                <StackPane prefWidth="28" prefHeight="28" style="-fx-background-color: #A855F7; -fx-background-radius: 14;">
                                    <ImageView fitWidth="14" fitHeight="14">
                                        <image><Image url="@/images/otak.png"/></image>
                                    </ImageView>
                                </StackPane>
                                <Label fx:id="stressLevelValue" text="Tinggi" style="-fx-font-family: 'Poppins'; -fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #1E3A8A;"/>
                                <VBox alignment="CENTER" spacing="1">
                                    <Label text="Rendah-Sedang-Tinggi" style="-fx-font-family: 'Poppins'; -fx-font-size: 8px; -fx-font-weight: 500; -fx-text-fill: #64748B;" textAlignment="CENTER"/>
                                    <Label text="Tingkat Stress" style="-fx-font-family: 'Poppins'; -fx-font-size: 10px; -fx-font-weight: 500; -fx-text-fill: #000000;" textAlignment="CENTER"/>
                                </VBox>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Data Kesehatan Fisik Card -->
                    <VBox spacing="16" prefWidth="350"
                          style="-fx-background-color: #FFFFFF; -fx-background-radius: 12;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 2); -fx-padding: 24;">

                        <!-- Card Header -->
                        <HBox alignment="CENTER_LEFT">
                            <Label text="Data Kesehatan"
                                   style="-fx-font-family: 'Poppins'; -fx-font-size: 16px; -fx-font-weight: bolder; -fx-text-fill: #1E3A8A;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="Lihat Selengkapnya"
                                    style="-fx-background-color: transparent; -fx-border-color: #CBD5E1; -fx-border-radius: 6;
                                           -fx-text-fill: #0F172A; -fx-font-family: 'Poppins'; -fx-font-size: 11px;
                                           -fx-font-weight: 500; -fx-padding: 8 12; -fx-cursor: hand;">
                                <graphic>
                                    <ImageView fitWidth="10" fitHeight="10">
                                        <image><Image url="@/images/arrow-right.png"/></image>
                                    </ImageView>
                                </graphic>
                            </Button>
                        </HBox>

                        <!-- Chart Area -->
                        <StackPane prefHeight="140" style="-fx-background-color: #FAFAFA; -fx-background-radius: 6;">
                            <LineChart fx:id="healthChart" prefHeight="140" createSymbols="false"
                                       style="-fx-background-color: transparent;">
                                <xAxis>
                                    <CategoryAxis fx:id="xAxis" style="-fx-tick-label-font-size: 9px;"/>
                                </xAxis>
                                <yAxis>
                                    <NumberAxis fx:id="yAxis" autoRanging="false" lowerBound="0" upperBound="400"
                                                tickUnit="100" style="-fx-tick-label-font-size: 9px;"/>
                                </yAxis>
                            </LineChart>
                        </StackPane>

                        <!-- Chart Legend -->
                        <HBox spacing="16" alignment="CENTER">
                            <HBox spacing="4" alignment="CENTER_LEFT">
                                <Circle radius="3" fill="#FFC800"/>
                                <Label text="Durasi Tidur" style="-fx-font-family: 'Poppins'; -fx-font-size: 9px; -fx-font-weight: 500; -fx-text-fill: #6B7280;"/>
                            </HBox>
                            <HBox spacing="4" alignment="CENTER_LEFT">
                                <Circle radius="3" fill="#EF4444"/>
                                <Label text="Durasi Olahraga" style="-fx-font-family: 'Poppins'; -fx-font-size: 9px; -fx-font-weight: 500; -fx-text-fill: #6B7280;"/>
                            </HBox>
                            <HBox spacing="4" alignment="CENTER_LEFT">
                                <Circle radius="3" fill="#22C55E"/>
                                <Label text="Jumlah Langkah" style="-fx-font-family: 'Poppins'; -fx-font-size: 9px; -fx-font-weight: 500; -fx-text-fill: #6B7280;"/>
                            </HBox>
                        </HBox>
                    </VBox>
                </HBox>

                <!-- ===== CTA SECTION ===== -->
                <StackPane prefHeight="320" style="-fx-background-radius: 12;">
                    <ImageView fitWidth="1200" fitHeight="320" preserveRatio="false" opacity="0.8">
                        <image><Image url="@/images/cta-background.png"/></image>
                    </ImageView>

                    <VBox alignment="CENTER" spacing="20">
                        <!-- Icon -->
                        <StackPane prefWidth="56" prefHeight="56" style= "-fx-background-radius: 16;">
                            <!-- CTA Text -->
                            <ImageView fitWidth="30" fitHeight="30">
                                <image><Image url="@/images/Logo (2).png"/></image>
                            </ImageView>
                        </StackPane>

                        <VBox alignment="CENTER" spacing="8">
                            <Label text="Buat Rekomendasi Obat dan Suplemen?"
                                   style="-fx-font-family: 'Poppins'; -fx-font-size: 24px; -fx-font-weight: bolder; -fx-text-fill: #FFFFFF;"
                                   textAlignment="CENTER"/>
                            <Label text="Klik Sehatmu Dimulai di Sini"
                                   style="-fx-font-family: 'Poppins'; -fx-font-size: 14px; -fx-font-weight: 400; -fx-text-fill: rgba(255,255,255,0.8);"
                                   textAlignment="CENTER"/>
                        </VBox>

                        <!-- Generate Button -->
                        <Button fx:id="btnGenerate" text="Generate" onAction="#handleGenerate"
                                style="-fx-background-color: #FFFFFF; -fx-text-fill: #1E40AF; -fx-background-radius: 10;
                                       -fx-font-family: 'Poppins'; -fx-font-size: 14px; -fx-font-weight: bolder;
                                       -fx-padding: 12 32; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 2);"/>
                    </VBox>
                </StackPane>

                <!-- ===== SCHEDULE SECTION ===== -->
                <VBox spacing="20" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12;
                                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 2); -fx-padding: 24;">

                    <!-- Section Header -->
